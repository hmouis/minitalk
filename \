#include "minitalk.h"

void get_bit(int sig)
{
	int i;
	static unsigned char c;

	i = 0;
	int pow = 1;
	while (i < 8)
	{
		if (sig == SIGUSR1)
			c += 0;
		else
			c += pow * 2;
		i++;
		pow++;
	}
	write (1, &c, 1);
}


int main()
{
	int pid = getpid();
	printf("%d\n", pid);
	signal (SIGUSR1, get_bit);
	signal (SIGUSR2, get_bit);
	while (1)
	{
		usleep(10000);
	}
}
